<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>net.javaguides.usermanagement.web.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkEmail</servlet-name>
        <servlet-class>checkEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>net.javaguides.usermanagement.web.UserLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>chooseCity</servlet-name>
        <servlet-class>net.javaguides.usermanagement.web.chooseCity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userLogout</servlet-name>
        <servlet-class>net.javaguides.usermanagement.web.userLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>moviePage</servlet-name>
        <servlet-class>net.javaguides.usermanagement.web.moviePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookTicket</servlet-name>
        <servlet-class>net.javaguides.usermanagement.web.bookTicket</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkEmail</servlet-name>
        <url-pattern>/checkEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>chooseCity</servlet-name>
        <url-pattern>/chooseCity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userLogout</servlet-name>
        <url-pattern>/userLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>moviePage</servlet-name>
        <url-pattern>/moviePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookTicket</servlet-name>
        <url-pattern>/bookTicket</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            1
        </session-timeout>
    </session-config>
</web-app>
